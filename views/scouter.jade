extends layout

block content
    h1= "Enter your team"
    form(action="/scouter", method="post")
        label(for="Enter")
            p Please select a region: 
                select(name="region")
                    each region in regions
                        option(selected=(region == "na" ? region : null)) #{region}
        input(type="text", name="summoner_name" placeholder="Enter summoner name")
        br
        input#Enter(type="text", name="p2" placeholder="Enter summoner name")
        br
        input(type="text", name="p3" placeholder="Enter summoner name")
        br
        input(type="text", name="p4" placeholder="Enter summoner name")
        br
        input(type="text", name="p5" placeholder="Enter summoner name")
        br
        input(type="submit", value="Submit")